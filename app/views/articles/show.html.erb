<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<% if @article.comments.length >= 1 %>
  <h3>Comments</h3>
  <%= render @article.comments %>
<% end %>
<h3>Add a comment : </h3>
<%= render "comments/form" %>
<%= link_to "Edit", edit_article_path %> |
<%= link_to "Destroy",
                  article_path(@article),
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?",
                  } %> |
<%= link_to "Home", articles_path %>
